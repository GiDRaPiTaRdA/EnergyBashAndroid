<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:gravity="center"
    android:background="#ff000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="bottom"
        android:weightSum="1"
        android:background="@drawable/by_s3"
        android:layout_weight="0.1"
        android:id="@+id/record_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Record"
            android:id="@+id/name"
            android:layout_weight="0.8"
            android:gravity="bottom|left"
            android:textSize="40dp"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:textStyle="bold"
            android:onClick="Change"
            android:enabled="true"
            android:clickable="true"
            android:layout_gravity="center|left"
            android:longClickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="100"
            android:id="@+id/record_view"
            android:layout_weight="0.2"
            android:gravity="center|bottom|right"
            android:textSize="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center|right"
            android:clickable="true"
            android:onClick="Change_name" />

    </LinearLayout>

    <ProgressBar
        style="@android:style/Widget.SeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prbr"
        android:progress="0"
        android:max="100"
        android:layout_weight="0.1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:weightSum="1"
        android:background="@drawable/by_s2"
        android:layout_weight="0.1"
        android:gravity="center"
        android:id="@+id/time_score">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="T:0:30"
            android:id="@+id/seconds"
            android:textSize="50dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#7d000000"
            android:layout_weight="0.4" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="G:0"
            android:id="@+id/gamer_points"
            android:gravity="center|center_vertical|center_horizontal"
            android:textSize="50dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:background="#7d000000"
            android:layout_weight="0.3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />
    </LinearLayout>

    <ProgressBar
        style="@android:style/Widget.SeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prbs"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:background="@drawable/by_s5"
        android:id="@+id/button_space">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:weightSum="1"
            android:gravity="center"
            android:id="@+id/linearLayout" >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="114dp"
                android:layout_height="70dp"
                android:text="Begin"
                android:id="@+id/pause"
                android:background="@drawable/bw_s4"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_weight="0.35" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="112dp"
                android:layout_height="70dp"
                android:text="Menu"
                android:id="@+id/menu"
                android:background="@drawable/bw_s4"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_weight="0.35" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:id="@+id/knopka"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/by_s1"
        android:layout_weight="0.5"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="50dp"
        android:text="TAP Begin\nTo GO" />

</LinearLayout>
